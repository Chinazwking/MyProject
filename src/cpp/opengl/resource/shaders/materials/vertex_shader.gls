#version 330 core

layout (location = 0) in vec3 apos;
layout (location = 1) in vec3 anormal;

out vec3 onormal;
out vec3 frag_pos;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
    gl_Position = projection * view * model * vec4(apos, 1.0);
    onormal = anormal;
    frag_pos = vec3(view * model * vec4(apos, 1.0));
}
